<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="android:background">@color/gray</item>

        <item name="actionBarStyle">@style/SearchActionBar</item>
        <item name="android:actionBarStyle">@style/SearchActionBar</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_back_screen</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_screen</item>
    </style>

    <style name="SearchActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/SearchTitleTextStyle</item>
        <item name="titleTextStyle">@style/SearchTitleTextStyle</item>


    </style>

    <style name="SearchTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/pumpkin_orange</item>
    </style>

</resources>